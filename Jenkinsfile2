pipeline {
    agent any

    stages {
        stage('DAST Scan') {
            steps {
                script {
                    try {
                        echo "Inicio de Scaneo Dinamico"
                        // Ejecuta el comando ZAP en el contenedor existente
                        sh "docker exec zap zap-cli --verbose quick-scan http://tu-url-de-prueba:puerto -l Medium"
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        println ("Revisar Reporte ZAP. Se encontraron Vulnerabilidades.")
                        currentBuild.result = 'UNSTABLE'
                    }
                }
            }
        }

        stage('Generate Report') {
            steps {
                // Genera el reporte usando el contenedor existente
                sh "docker exec zap zap-cli --verbose report -o /zap/reports/owasp-quick-scan-report.html --output-format html"
                publishHTML target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: false,
                    keepAll: true,
                    reportDir: '/zap/reports',
                    reportFiles: 'owasp-quick-scan-report.html',
                    reportName: 'Analisis DAST'
                ]
            }
        }
    }
}
