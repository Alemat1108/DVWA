pipeline {
    agent any
    stages {
        stage('Run OWASP ZAP Scan') {
            steps {
                script {
                    sh '''
                    # Iniciar un escaneo activo usando la API de ZAP con la verificaciÃ³n del certificado deshabilitada
                    curl -k "https://localhost:8090//JSON/ascan/action/scan/?url=https://github.com/Alemat1108/DVWA/tree/master"

                    # Esperar hasta que el escaneo termine
                    sleep 50

                    # Descargar el informe HTML
                    curl -k "https://localhost:8090//OTHER/core/other/htmlreport/" > zap-report.html
                    '''
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'zap-report.html', fingerprint: true
        }
    }
}
